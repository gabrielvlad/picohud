{
	"schema_version": 1,
	"quilt_loader": {
		"group": "folk.sisby",
		"id": "picohud",
		"version": "${version}",
		"metadata": {
			"name": "PicoHUD",
			"description": "An unobtrusive, player-readable information hud",
			"contributors": {
				"Sisby folk": "Co-Authors"
			},
			"contact": {
				"homepage": "https://modrinth.com/mod/picohud",
				"issues": "https://github.com/sisby-folk/picohud/issues",
				"sources": "https://github.com/sisby-folk/picohud"
			},
			"icon": "assets/picohud/icon.png"
		},
		"entrypoints": {
			"client": [
				"folk.sisby.picohud.PicoHudClient"
			]
		},
		"intermediate_mappings": "net.fabricmc:intermediary",
		"depends": [
			{
				"id": "minecraft",
				"versions": ">=${mc}"
			},
			{
				"id": "fabricloader",
				"versions": ">=${fl}"
			},
			{
				"id": "fabric-api",
				"versions": ">=${fapi}"
			},
			{
				"id": "seasons",
				"versions": ">=${seasons}",
				"optional": true
			}
		],
		"jars": [
			"META-INF/jars/kaleido-config-${kaleidoConfig}.jar"
		]
	}
}
